@model DAMH.Controllers.EditAdminViewModel
@{
    ViewData["Title"] = "Cập nhật Admin";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-warning">
            <i class="bi bi-pencil-square"></i> Cập nhật thông tin Admin
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <form asp-action="EditAdmin" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold"></label>
                    <input asp-for="Email" class="form-control" readonly>
                </div>

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label fw-bold"></label>
                    <input asp-for="FullName" class="form-control" placeholder="Nhập họ tên">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="NewPassword" class="form-label fw-bold"></label>
                        <input asp-for="NewPassword" class="form-control" placeholder="Để trống nếu không đổi">
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ConfirmNewPassword" class="form-label fw-bold"></label>
                        <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Xác nhận mật khẩu mới">
                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-warning text-dark px-4">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

