@using Microsoft.AspNetCore.Identity
@using DAMH.Models

@model IEnumerable<DAMH.Models.ApplicationUser>
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Quản lý Admin";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-warning">
            <i class="bi bi-shield-lock-fill"></i> Quản Lý Tài Khoản Admin
        </h2>
        <a asp-action="CreateAdmin" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-circle"></i> Tạo Admin Mới
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 35%">Email</th>
                            <th style="width: 20%">Quyền</th>
                            <th style="width: 25%">Họ tên</th>
                            <th style="width: 15%">Ngày tạo</th>
                            <th style="width: 15%" class="text-end">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var admin in Model)
                        {
                            var roles = await UserManager.GetRolesAsync(admin);
                            var role = roles.FirstOrDefault() ?? "User";
                            var roleBadge = role == "SuperAdmin" ? "bg-danger" : "bg-warning";
                            
                            <tr>
                                <td>
                                    <i class="bi bi-person-badge text-primary"></i>
                                    <strong>@admin.Email</strong>
                                </td>
                                <td>
                                    <span class="badge @roleBadge">@role</span>
                                </td>
                                <td>@(admin.FullName ?? "Chưa cập nhật")</td>
                                <td>
                                    <small class="text-muted">
                                        @admin.RegistrationDate.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="EditAdmin" asp-route-id="@admin.Id"
                                           class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil-square"></i> Sửa
                                        </a>
                                        <form asp-action="DeleteAdmin" asp-route-id="@admin.Id"
                                              method="post" class="d-inline"
                                              onsubmit="return confirm('Bạn có chắc chắn muốn xóa Admin này?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash"></i> Xóa
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-info-circle display-1"></i>
            <h4 class="mt-3">Chưa có Admin nào</h4>
            <p>Nhấn nút "Tạo Admin Mới" để bắt đầu.</p>
        </div>
    }
</div>

