@model DAMH.Models.ViewModels.EditUserViewModel
@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
    Layout = "_AdminLayout";
    var isVipActive = Model.IsMember && Model.SubscriptionExpiryDate > DateTime.Now;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-warning">
            <i class="bi bi-person-gear"></i> Chỉnh Sửa Thông Tin Người Dùng
        </h2>
        <a asp-action="ManageUsers" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0"><i class="bi bi-person-badge"></i> Thông Tin Cá Nhân</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="EditUser" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="IsMember" />
                        <input type="hidden" asp-for="SubscriptionExpiryDate" />
                        <input type="hidden" asp-for="RegistrationDate" />

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">Email (Không thể thay đổi)</label>
                            <input asp-for="Email" class="form-control-plaintext bg-light px-3 py-2 rounded" readonly>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FullName" class="form-label fw-bold">Họ và tên</label>
                                <input asp-for="FullName" class="form-control" placeholder="Nhập họ tên">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="PhoneNumber" class="form-label fw-bold">Số điện thoại</label>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label fw-bold">Địa chỉ</label>
                            <textarea asp-for="Address" class="form-control" rows="2" placeholder="Nhập địa chỉ"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Ngày đăng ký</label>
                            <input type="text" class="form-control-plaintext bg-light px-3 py-2 rounded"
                                   value="@Model.RegistrationDate.ToString("dd/MM/yyyy HH:mm")" readonly>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-warning text-dark px-5">
                                <i class="bi bi-save"></i> Lưu Thay Đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 @(isVipActive ? "border-warning" : "") mb-4">
                <div class="card-header @(isVipActive ? "bg-warning text-dark" : "bg-secondary text-white")">
                    <h5 class="mb-0">
                        <i class="bi bi-crown-fill"></i> Quản Lý VIP
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Trạng thái hiện tại:</label>
                        @if (isVipActive)
                        {
                            <div class="alert alert-warning mb-2">
                                <i class="bi bi-check-circle-fill"></i> <strong>VIP Đang Hoạt Động</strong>
                            </div>
                        }
                        else if (Model.IsMember)
                        {
                            <div class="alert alert-secondary mb-2">
                                <i class="bi bi-x-circle-fill"></i> <strong>VIP Đã Hết Hạn</strong>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-light border mb-2">
                                <i class="bi bi-person"></i> <strong>Tài Khoản Thường</strong>
                            </div>
                        }
                    </div>

                    @if (Model.SubscriptionExpiryDate.HasValue)
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Hạn sử dụng:</label>
                            @if (Model.SubscriptionExpiryDate.Value > DateTime.Now.AddYears(50))
                            {
                                <div class="alert alert-dark mb-0">
                                    <i class="bi bi-infinity"></i> <strong>Trọn Đời</strong>
                                </div>
                            }
                            else
                            {
                                var daysLeft = (Model.SubscriptionExpiryDate.Value - DateTime.Now).Days;
                                var alertClass = daysLeft > 0 ? "alert-success" : "alert-danger";
                                <div class="alert @alertClass mb-0">
                                    <strong>@Model.SubscriptionExpiryDate.Value.ToString("dd/MM/yyyy HH:mm")</strong>
                                    <br>
                                    @if (daysLeft > 0)
                                    {
                                        <small>Còn <strong>@daysLeft ngày</strong></small>
                                    }
                                    else
                                    {
                                        <small>Đã hết hạn <strong>@Math.Abs(daysLeft) ngày</strong> trước</small>
                                    }
                                </div>
                            }
                        </div>
                    }

                    <hr>

                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-plus-circle"></i> Gia Hạn VIP:
                        </label>
                        <div class="d-grid gap-2">
                            <form asp-action="ExtendVip" method="post" class="d-inline"
                                  onsubmit="return confirm('Gia hạn VIP 1 tháng cho người dùng này?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="userId" value="@Model.Id" />
                                <input type="hidden" name="months" value="1" />
                                <button type="submit" class="btn btn-outline-primary w-100">
                                    <i class="bi bi-calendar-plus"></i> +1 Tháng
                                </button>
                            </form>

                            <form asp-action="ExtendVip" method="post" class="d-inline"
                                  onsubmit="return confirm('Gia hạn VIP 3 tháng cho người dùng này?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="userId" value="@Model.Id" />
                                <input type="hidden" name="months" value="3" />
                                <button type="submit" class="btn btn-outline-success w-100">
                                    <i class="bi bi-calendar-plus"></i> +3 Tháng
                                </button>
                            </form>

                            <form asp-action="ExtendVip" method="post" class="d-inline"
                                  onsubmit="return confirm('Gia hạn VIP 6 tháng cho người dùng này?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="userId" value="@Model.Id" />
                                <input type="hidden" name="months" value="6" />
                                <button type="submit" class="btn btn-outline-warning w-100">
                                    <i class="bi bi-calendar-plus"></i> +6 Tháng
                                </button>
                            </form>

                            <form asp-action="ExtendVip" method="post" class="d-inline"
                                  onsubmit="return confirm('Gia hạn VIP 1 năm cho người dùng này?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="userId" value="@Model.Id" />
                                <input type="hidden" name="months" value="12" />
                                <button type="submit" class="btn btn-outline-danger w-100">
                                    <i class="bi bi-calendar-plus"></i> +1 Năm
                                </button>
                            </form>

                            <hr>

                            <form asp-action="ExtendVip" method="post" class="d-inline"
                                  onsubmit="return confirm('⚠️ CẢNH BÁO: Bạn sắp cấp VIP TRỌN ĐỜI cho người dùng này. Hành động này không thể hoàn tác. Bạn có chắc chắn?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="userId" value="@Model.Id" />
                                <input type="hidden" name="months" value="999" />
                                <button type="submit" class="btn btn-dark w-100 fw-bold">
                                    <i class="bi bi-infinity"></i> TRỌN ĐỜI
                                </button>
                            </form>

                            @if (Model.IsMember)
                            {
                                <hr>

                                <form asp-action="RemoveVIP" asp-route-id="@Model.Id"
                                      method="post" class="d-inline w-100"
                                      onsubmit="return confirm('Bạn có chắc chắn muốn xóa VIP của người dùng này không?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger w-100">
                                        <i class="bi bi-crown"></i> Xóa VIP
                                    </button>
                                </form>
                            }
                        </div>
                    </div>

                    <div class="alert alert-info small mb-0">
                        <i class="bi bi-info-circle"></i>
                        Gia hạn bởi Admin sẽ được ghi nhận trong lịch sử giao dịch với giá trị 0đ
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}