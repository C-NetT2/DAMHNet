@model DAMH.Models.Book
@{
    ViewData["Title"] = "Thêm sách mới";
}

<div class="container mt-4">
    <h2 class="mb-3">Thêm Sách Mới</h2>
    <form asp-action="CreateBook">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Title" class="form-label fw-bold">Tên sách</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Author" class="form-label fw-bold">Tác giả</label>
                <input asp-for="Author" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="BookType" class="form-label fw-bold">Loại</label>
                <select asp-for="BookType" class="form-select" asp-items="Html.GetEnumSelectList<DAMH.Models.BookType>()"></select>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="Genre" class="form-label fw-bold">Thể loại</label>
                <select asp-for="Genre" class="form-select" asp-items="Html.GetEnumSelectList<DAMH.Models.Genre>()"></select>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="AgeRating" class="form-label fw-bold">Độ tuổi</label>
                <select asp-for="AgeRating" class="form-select" asp-items="Html.GetEnumSelectList<DAMH.Models.AgeRating>()"></select>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="CoverImageUrl" class="form-label fw-bold">Link Ảnh Bìa (URL)</label>
            <input asp-for="CoverImageUrl" class="form-control" placeholder="https://example.com/anh-bia.jpg" />
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label fw-bold">Mô tả ngắn</label>
            <textarea asp-for="Description" class="form-control" rows="2"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="Introduction" class="form-label fw-bold">Giới thiệu chi tiết</label>
            <textarea asp-for="Introduction" class="form-control" rows="5"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="AccessLevel" class="form-label fw-bold">Quyền truy cập</label>
            <select asp-for="AccessLevel" class="form-select" asp-items="Html.GetEnumSelectList<DAMH.Models.AccessLevel>()"></select>
        </div>

        <button type="submit" class="btn btn-primary">Tạo Sách</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>