@model DAMH.Models.Book
@{
    ViewData["Title"] = "Quản lý ảnh bìa";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-warning">
            <i class="bi bi-image"></i> Quản Lý Ảnh Bìa: @Model.Title
        </h2>
        <a asp-action="ManageBookAssets" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách
        </a>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Ảnh Bìa Hiện Tại</h5>
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                    {
                        <img src="@Model.CoverImageUrl"
                             class="img-fluid rounded shadow mb-3"
                             alt="Ảnh bìa hiện tại"
                             style="max-height: 400px;"
                             onerror="this.onerror=null; this.src='https://placehold.co/300x450/e9ecef/6c757d?text=Loi+Anh';">

                        <form asp-action="DeleteCover" asp-route-bookId="@Model.BookId"
                              method="post" class="d-inline"
                              onsubmit="return confirm('Bạn có chắc muốn xóa ảnh bìa này?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="bi bi-trash"></i> Xóa Ảnh Bìa
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="text-muted py-5">
                            <i class="bi bi-image display-1"></i>
                            <p class="mt-3">Chưa có ảnh bìa</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Tải Lên Ảnh Bìa Mới</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UploadCover" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="bookId" value="@Model.BookId" />

                        <div class="mb-4">
                            <h6 class="fw-bold text-primary mb-3">
                                <i class="bi bi-cloud-upload"></i> Cách 1: Tải File Ảnh
                            </h6>
                            <div class="border rounded p-3 bg-light">
                                <input type="file" class="form-control" name="coverFile"
                                       accept="image/*" id="coverFileInput">
                                <small class="form-text text-muted mt-2 d-block">
                                    Hỗ trợ: JPG, PNG, GIF, WebP (Tối đa 5MB)
                                </small>

                                <div id="filePreview" class="mt-3 text-center" style="display: none;">
                                    <img id="previewImage" class="img-thumbnail"
                                         style="max-height: 300px;" alt="Xem trước">
                                </div>
                            </div>
                        </div>

                        <div class="text-center my-3">
                            <span class="badge bg-secondary">HOẶC</span>
                        </div>

                        <div class="mb-4">
                            <h6 class="fw-bold text-primary mb-3">
                                <i class="bi bi-link-45deg"></i> Cách 2: Dán Link Ảnh
                            </h6>
                            <div class="border rounded p-3 bg-light">
                                <input type="url" class="form-control" name="coverUrl"
                                       placeholder="https://example.com/image.jpg"
                                       id="coverUrlInput">
                                <small class="form-text text-muted mt-2 d-block">
                                    Nhập đường dẫn trực tiếp đến ảnh
                                </small>

                                <div id="urlPreview" class="mt-3 text-center" style="display: none;">
                                    <img id="previewUrlImage" class="img-thumbnail"
                                         style="max-height: 300px;" alt="Xem trước"
                                         onerror="this.style.display='none'; document.getElementById('urlError').style.display='block';">
                                    <div id="urlError" class="alert alert-danger mt-2" style="display: none;">
                                        Link ảnh không hợp lệ hoặc không tải được
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-warning">
                            <i class="bi bi-info-circle"></i>
                            <strong>Lưu ý:</strong> Chọn một trong hai cách (upload file HOẶC nhập URL).
                            Nếu cả hai đều có, hệ thống ưu tiên file upload.
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-warning text-dark btn-lg px-5">
                                <i class="bi bi-save"></i> Lưu Ảnh Bìa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('coverFileInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('previewImage').src = e.target.result;
                    document.getElementById('filePreview').style.display = 'block';

                    document.getElementById('coverUrlInput').value = '';
                    document.getElementById('urlPreview').style.display = 'none';
                };
                reader.readAsDataURL(file);
            }
        });

        let urlTimeout;
        document.getElementById('coverUrlInput').addEventListener('input', function(e) {
            clearTimeout(urlTimeout);
            const url = e.target.value.trim();

            if (url) {
                urlTimeout = setTimeout(() => {
                    document.getElementById('previewUrlImage').src = url;
                    document.getElementById('urlPreview').style.display = 'block';
                    document.getElementById('urlError').style.display = 'none';

                    document.getElementById('coverFileInput').value = '';
                    document.getElementById('filePreview').style.display = 'none';
                }, 500);
            } else {
                document.getElementById('urlPreview').style.display = 'none';
            }
        });
    </script>
}