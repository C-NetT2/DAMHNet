@model DAMH.Models.Book
@{
    ViewData["Title"] = "Quản lý media";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-info">
            <i class="bi bi-collection-play"></i> Quản Lý Media: @Model.Title
        </h2>
        <a asp-action="ManageBookAssets" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách
        </a>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Thêm Media Mới
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="AddBookMedia" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="bookId" value="@Model.BookId" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Loại Media</label>
                            <select class="form-select" name="mediaType" id="mediaTypeSelect" required>
                                <option value="">-- Chọn loại --</option>
                                <option value="0">Hình ảnh</option>
                                <option value="1">Video</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-cloud-upload"></i> Tải File
                            </label>
                            <input type="file" class="form-control" name="mediaFile" 
                                   id="mediaFileInput">
                            <small class="text-muted">Ảnh: JPG, PNG, GIF | Video: MP4, WebM</small>
                        </div>

                        <div class="text-center my-2">
                            <span class="badge bg-secondary">HOẶC</span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-link-45deg"></i> Link Media
                            </label>
                            <input type="url" class="form-control" name="mediaUrl" 
                                   placeholder="https://example.com/media.jpg">
                        </div>

                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-plus-circle"></i> Thêm Media
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-collection"></i> Danh Sách Media (@Model.MediaFiles.Count)
                    </h5>
                </div>
                <div class="card-body" style="max-height: 600px; overflow-y: auto;">
                    @if (Model.MediaFiles.Any())
                    {
                        <div class="list-group">
                            @foreach (var media in Model.MediaFiles.OrderByDescending(m => m.UploadedDate))
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <span class="badge @(media.MediaType == DAMH.Models.MediaType.Image ? "bg-primary" : "bg-danger")">
                                            @media.MediaType.GetName()
                                        </span>
                                        <form asp-action="DeleteMedia" asp-route-id="@media.Id" 
                                              method="post" class="d-inline"
                                              onsubmit="return confirm('Xóa media này?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                    
                                    @if (media.MediaType == DAMH.Models.MediaType.Image)
                                    {
                                        <img src="@media.Url" class="img-fluid rounded mb-2" 
                                             alt="Media"
                                             style="max-height: 200px; width: 100%; object-fit: cover;"
                                             onerror="this.onerror=null; this.src='https://placehold.co/400x300/e9ecef/6c757d?text=Loi+Anh';">
                                    }
                                    else
                                    {
                                        <video controls class="w-100 rounded mb-2" style="max-height: 200px;">
                                            <source src="@media.Url" type="video/mp4">
                                            Trình duyệt không hỗ trợ phát video.
                                        </video>
                                    }
                                    
                                    <small class="text-muted d-block text-truncate">
                                        <i class="bi bi-link-45deg"></i> @media.Url
                                    </small>
                                    <small class="text-muted">
                                        <i class="bi bi-calendar"></i> @media.UploadedDate.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-5">
                            <i class="bi bi-inbox display-4"></i>
                            <p class="mt-3">Chưa có media nào</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('mediaTypeSelect').addEventListener('change, function() {
            const fileInput = document.getElementById('mediaFileInput');
            if (this.value === '0') { 
                fileInput.accept = 'image/*';
            } else if (this.value === '1') { 
                fileInput.accept = 'video/*';
            } else {
                fileInput.accept = '';
            }
        });
    </script>
}