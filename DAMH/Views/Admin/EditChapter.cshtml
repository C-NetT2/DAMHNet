@model DAMH.Models.Chapter

@{
    ViewData["Title"] = "Sửa chương";
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Chỉnh Sửa Chương
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="EditChapter">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <input type="hidden" asp-for="ChapterId" />
                        <input type="hidden" asp-for="BookId" />

                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="Title" class="form-label fw-bold">Tên chương <span class="text-danger">*</span></label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="ChapterOrder" class="form-label fw-bold">Số thứ tự</label>
                                <input asp-for="ChapterOrder" class="form-control" type="number" min="1" />
                                <span asp-validation-for="ChapterOrder" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label fw-bold">Nội dung chương <span class="text-danger">*</span></label>

                            <div class="mb-2 p-2 bg-light border rounded d-flex gap-2">
                                <button type="button" class="btn btn-sm btn-outline-primary" onclick="document.getElementById('mediaInput').click()">
                                    <i class="bi bi-image"></i> Thêm Ảnh / Video
                                </button>
                                <small class="text-muted align-self-center fst-italic ms-2">
                                    (Hỗ trợ: jpg, png, mp4. Tự động chèn vào cuối nội dung)
                                </small>
                                <input type="file" id="mediaInput" style="display: none;" accept="image/*,video/*" onchange="uploadMedia()">
                            </div>

                            <textarea asp-for="Content" id="chapterContent" class="form-control" rows="15"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <div class="form-check form-switch p-3 border rounded bg-light">
                                <input class="form-check-input" type="checkbox" asp-for="IsFree" id="isFreeCheck" />
                                <label class="form-check-label fw-bold" for="isFreeCheck">Chương miễn phí</label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="ViewBookChapters" asp-route-bookId="@Model.BookId" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-warning px-5">
                                <i class="bi bi-save"></i> Lưu Thay Đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function uploadMedia() {
            var fileInput = document.getElementById('mediaInput');
            var file = fileInput.files[0];
            var formData = new FormData();
            formData.append("file", file);

            if (!file) return;

            var btn = document.querySelector('button[onclick*="mediaInput"]');
            var originalText = btn.innerHTML;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Đang tải lên...';
            btn.disabled = true;

            $.ajax({
                url: '/Admin/UploadChapterMedia',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.success) {
                        var textarea = document.getElementById('chapterContent');
                        textarea.value += '\n' + response.html + '\n';
                        alert('Đã thêm thành công!');
                    } else {
                        alert('Lỗi: ' + response.message);
                    }
                },
                error: function () {
                    alert('Có lỗi xảy ra khi tải file.');
                },
                complete: function () {
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                    fileInput.value = ''; 
                }
            });
        }
    </script>
}