@model IEnumerable<DAMH.Models.Favorite>
@using DAMH.Models
@{
    ViewData["Title"] = "Quản lý Yêu thích";
    Layout = "_AdminLayout";
    var users = ViewBag.Users as List<ApplicationUser> ?? new List<ApplicationUser>();
    var books = ViewBag.Books as List<Book> ?? new List<Book>();
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var totalCount = ViewBag.TotalCount as int? ?? 0;
    var userId = ViewBag.UserId as string ?? string.Empty;
    var bookId = ViewBag.BookId as int? ?? null;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-danger">
            <i class="bi bi-heart-fill"></i> Quản Lý Yêu Thích
            <span class="badge bg-secondary">@totalCount mục</span>
        </h2>
    </div>

    <div class="search-filter-card card mb-4">
        <div class="card-header">
            <i class="bi bi-funnel-fill"></i> Lọc Danh Sách Yêu Thích
        </div>
        <div class="card-body">
            <form asp-action="ManageFavorites" method="get" class="row g-3">
                <div class="col-md-5">
                    <label class="form-label">
                        <i class="bi bi-person"></i> Người dùng
                    </label>
                    <select class="form-select" name="userId">
                        <option value="">Tất cả người dùng</option>
                        @foreach (var user in users)
                        {
                            var isSelected = userId == user.Id;
                            <option value="@user.Id" selected="@isSelected">
                                @(user.Email ?? user.UserName)
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-5">
                    <label class="form-label">
                        <i class="bi bi-book"></i> Sách
                    </label>
                    <select class="form-select" name="bookId">
                        <option value="">Tất cả sách</option>
                        @foreach (var book in books)
                        {
                            var isSelected = bookId == book.BookId;
                            <option value="@book.BookId" selected="@isSelected">
                                @book.Title
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-funnel"></i> Lọc
                    </button>
                    <a asp-action="ManageFavorites" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-counterclockwise"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 5%">#</th>
                            <th style="width: 30%">Người dùng</th>
                            <th style="width: 35%">Sách</th>
                            <th style="width: 20%">Ngày thêm</th>
                            <th style="width: 10%" class="text-end">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int rowNumber = (currentPage - 1) * 30 + 1;
                        }
                        @foreach (var fav in Model)
                        {
                            <tr>
                                <td>@rowNumber</td>
                                <td>
                                    <i class="bi bi-person-circle text-primary"></i>
                                    @(fav.User?.Email ?? fav.UserId)
                                </td>
                                <td>
                                    <i class="bi bi-book"></i>
                                    @(fav.Book?.Title ?? $"Book #{fav.BookId}")
                                </td>
                                <td>
                                    <small class="text-muted">@fav.DateAdded.ToString("dd/MM/yyyy HH:mm")</small>
                                </td>
                                <td class="text-end">
                                    <form asp-action="DeleteFavorite" asp-route-id="@fav.FavoriteId" method="post" class="d-inline" onsubmit="return confirm('Xóa mục yêu thích này?');">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            rowNumber++;
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @if (totalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @if (currentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="ManageFavorites" asp-route-page="1"
                               asp-route-userId="@userId" asp-route-bookId="@bookId">
                                <i class="bi bi-chevron-double-left"></i>
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" asp-action="ManageFavorites" asp-route-page="@(currentPage - 1)"
                               asp-route-userId="@userId" asp-route-bookId="@bookId">
                                <i class="bi bi-chevron-left"></i> Trước
                            </a>
                        </li>
                    }

                    @{
                        int startPage = Math.Max(1, currentPage - 2);
                        int endPage = Math.Min(totalPages, currentPage + 2);
                    }

                    @if (startPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="ManageFavorites" asp-route-page="1"
                               asp-route-userId="@userId" asp-route-bookId="@bookId">1</a>
                        </li>
                        @if (startPage > 2)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                    }

                    @for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" asp-action="ManageFavorites" asp-route-page="@i"
                               asp-route-userId="@userId" asp-route-bookId="@bookId">@i</a>
                        </li>
                    }

                    @if (endPage < totalPages)
                    {
                        @if (endPage < totalPages - 1)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                        <li class="page-item">
                            <a class="page-link" asp-action="ManageFavorites" asp-route-page="@totalPages"
                               asp-route-userId="@userId" asp-route-bookId="@bookId">@totalPages</a>
                        </li>
                    }

                    @if (currentPage < totalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="ManageFavorites" asp-route-page="@(currentPage + 1)"
                               asp-route-userId="@userId" asp-route-bookId="@bookId">
                                Sau <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" asp-action="ManageFavorites" asp-route-page="@totalPages"
                               asp-route-userId="@userId" asp-route-bookId="@bookId">
                                <i class="bi bi-chevron-double-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>

            <div class="pagination-info">
                Trang @currentPage / @totalPages (Tổng: @totalCount mục)
            </div>
        }
    }
    else
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-info-circle display-1"></i>
            <h4 class="mt-3">Chưa có dữ liệu phù hợp</h4>
            @if (!string.IsNullOrEmpty(userId) || bookId.HasValue)
            {
                <a asp-action="ManageFavorites" class="btn btn-primary mt-2">Xem tất cả</a>
            }
        </div>
    }
</div>