@model IEnumerable<DAMH.Models.Favorite>
@using DAMH.Models
@{
    ViewData["Title"] = "Quản lý Yêu thích";
    Layout = "_AdminLayout";
    var users = ViewBag.Users as List<ApplicationUser> ?? new List<ApplicationUser>();
    var books = ViewBag.Books as List<Book> ?? new List<Book>();
    var selectedUserId = Context?.Request?.Query["userId"].ToString() ?? string.Empty;
    var selectedBookId = Context?.Request?.Query["bookId"].ToString() ?? string.Empty;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-danger">
            <i class="bi bi-heart-fill"></i> Quản lý danh sách yêu thích
        </h2>
    </div>

    <form class="card shadow-sm border-0 mb-4">
        <div class="card-body row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label fw-bold">Người dùng</label>
                <select class="form-select" name="userId" onchange="this.form.submit()">
                    <option value="">Tất cả</option>
                    @foreach (var user in users)
                    {
                        var isSelected = selectedUserId == user.Id;
                        <option value="@user.Id" selected="@isSelected">
                            @(user.Email ?? user.UserName)
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label fw-bold">Sách</label>
                <select class="form-select" name="bookId" onchange="this.form.submit()">
                    <option value="">Tất cả</option>
                    @foreach (var book in books)
                    {
                        var isSelected = selectedBookId == book.BookId.ToString();
                        <option value="@book.BookId" selected="@isSelected">
                            @book.Title
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-4 text-md-end">
                <a asp-action="ManageFavorites" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-counterclockwise"></i> Reset lọc
                </a>
            </div>
        </div>
    </form>

    @{
        var currentPage = ViewBag.CurrentPage as int? ?? 1;
        var totalPages = ViewBag.TotalPages as int? ?? 1;
        var totalCount = ViewBag.TotalCount as int? ?? 0;
        var userId = ViewBag.UserId as string ?? string.Empty;
        var bookId = ViewBag.BookId as int? ?? null;

        Func<int, string> GetUrl = (page) =>
        {
            var url = $"/Admin/ManageFavorites?page={page}";
            if (!string.IsNullOrEmpty(userId)) url += $"&userId={userId}";
            if (bookId.HasValue) url += $"&bookId={bookId}";
            return url;
        };
    }

    @if (Model.Any())
    {
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Người dùng</th>
                            <th>Sách</th>
                            <th>Ngày thêm</th>
                            <th class="text-end">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var fav in Model)
                        {
                            <tr>
                                <td>
                                    <i class="bi bi-person-circle text-primary"></i>
                                    @(fav.User?.Email ?? fav.UserId)
                                </td>
                                <td>
                                    <i class="bi bi-book"></i>
                                    @(fav.Book?.Title ?? $"Book #{fav.BookId}")
                                </td>
                                <td>
                                    <small class="text-muted">@fav.DateAdded.ToString("dd/MM/yyyy HH:mm")</small>
                                </td>
                                <td class="text-end">
                                    <form asp-action="DeleteFavorite" asp-route-id="@fav.FavoriteId" method="post" class="d-inline" onsubmit="return confirm('Xóa mục yêu thích này?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Xóa
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <small class="text-muted">
                Hiển thị trang <strong>@currentPage</strong> / <strong>@totalPages</strong> (Tổng: <strong>@totalCount</strong> mục)
            </small>

            @if (totalPages > 1)
            {
                <nav>
                    <ul class="pagination mb-0">
                        @if (currentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@GetUrl(1)">
                                    <i class="bi bi-chevron-double-left"></i>
                                </a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="@GetUrl(currentPage - 1)">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>
                        }

                        @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                        {
                            if (i == currentPage)
                            {
                                <li class="page-item active">
                                    <span class="page-link">@i</span>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@GetUrl(i)">@i</a>
                                </li>
                            }
                        }

                        @if (currentPage < totalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@GetUrl(currentPage + 1)">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="@GetUrl(totalPages)">
                                    <i class="bi bi-chevron-double-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-info-circle display-4"></i>
            <h4 class="mt-3">Chưa có dữ liệu phù hợp.</h4>
        </div>
    }
</div>

