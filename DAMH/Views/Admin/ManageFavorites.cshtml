@model IEnumerable<DAMH.Models.Favorite>
@using DAMH.Models
@{
    ViewData["Title"] = "Quản lý Yêu thích";
    Layout = "_AdminLayout";
    var users = ViewBag.Users as List<ApplicationUser> ?? new List<ApplicationUser>();
    var books = ViewBag.Books as List<Book> ?? new List<Book>();
    var selectedUserId = Context?.Request?.Query["userId"].ToString() ?? string.Empty;
    var selectedBookId = Context?.Request?.Query["bookId"].ToString() ?? string.Empty;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-danger">
            <i class="bi bi-heart-fill"></i> Quản lý danh sách yêu thích
        </h2>
    </div>

    <form class="card shadow-sm border-0 mb-4">
        <div class="card-body row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label fw-bold">Người dùng</label>
                <select class="form-select" name="userId" onchange="this.form.submit()">
                    <option value="">Tất cả</option>
                    @foreach (var user in users)
                    {
                        var isSelected = selectedUserId == user.Id;
                        <option value="@user.Id" selected="@isSelected">
                            @(user.Email ?? user.UserName)
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label fw-bold">Sách</label>
                <select class="form-select" name="bookId" onchange="this.form.submit()">
                    <option value="">Tất cả</option>
                    @foreach (var book in books)
                    {
                        var isSelected = selectedBookId == book.BookId.ToString();
                        <option value="@book.BookId" selected="@isSelected">
                            @book.Title
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-4 text-md-end">
                <a asp-action="ManageFavorites" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-counterclockwise"></i> Reset lọc
                </a>
            </div>
        </div>
    </form>

    @if (Model.Any())
    {
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Người dùng</th>
                            <th>Sách</th>
                            <th>Ngày thêm</th>
                            <th class="text-end">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var fav in Model)
                        {
                            <tr>
                                <td>
                                    <i class="bi bi-person-circle text-primary"></i>
                                    @(fav.User?.Email ?? fav.UserId)
                                </td>
                                <td>
                                    <i class="bi bi-book"></i>
                                    @(fav.Book?.Title ?? $"Book #{fav.BookId}")
                                </td>
                                <td>
                                    <small class="text-muted">@fav.DateAdded.ToString("dd/MM/yyyy HH:mm")</small>
                                </td>
                                <td class="text-end">
                                    <form asp-action="DeleteFavorite" asp-route-id="@fav.FavoriteId" method="post" class="d-inline" onsubmit="return confirm('Xóa mục yêu thích này?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Xóa
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-info-circle display-4"></i>
            <h4 class="mt-3">Chưa có dữ liệu phù hợp.</h4>
        </div>
    }
</div>

