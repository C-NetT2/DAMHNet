@model IEnumerable<DAMH.Models.Book>
@{
    ViewData["Title"] = "Quản lý ảnh bìa & media";
    Layout = "_AdminLayout";
    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var totalBooks = ViewBag.TotalBooks ?? 0;
    var searchTerm = ViewBag.SearchTerm ?? "";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">
            <i class="bi bi-images"></i> Quản Lý Ảnh Bìa & Media
        </h2>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form asp-action="ManageBookAssets" method="get" class="row g-3">
                <div class="col-md-8">
                    <label class="form-label fw-bold">
                        <i class="bi bi-search"></i> Tìm theo Tên Sách hoặc Tác Giả
                    </label>
                    <input type="text" name="searchTerm" class="form-control"
                           value="@searchTerm" placeholder="Nhập tên sách hoặc tác giả...">
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search"></i> Tìm kiếm
                    </button>
                    <a asp-action="ManageBookAssets" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Xóa
                    </a>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th style="width: 10%">Ảnh Bìa</th>
                                <th style="width: 30%">Tên Sách</th>
                                <th style="width: 20%">Tác Giả</th>
                                <th style="width: 15%">Thể Loại</th>
                                <th style="width: 10%">Media</th>
                                <th style="width: 15%" class="text-end">Hành Động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var book in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@(book.CoverImageUrl ?? "/images/default-cover.jpg")"
                                             class="img-thumbnail"
                                             style="width: 60px; height: 90px; object-fit: cover;"
                                             alt="Ảnh bìa"
                                             onerror="this.onerror=null; this.src='https://placehold.co/100x150/e9ecef/6c757d?text=Loi+Anh';">
                                    </td>
                                    <td><strong>@book.Title</strong></td>
                                    <td>@(book.Author ?? "Chưa có")</td>
                                    <td>
                                        <span class="badge bg-info">@book.Genre.GetName()</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-secondary">
                                            @book.MediaFiles.Count files
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="ManageCover" asp-route-bookId="@book.BookId"
                                               class="btn btn-sm btn-warning" title="Quản lý ảnh bìa">
                                                <i class="bi bi-image"></i> Bìa
                                            </a>
                                            <a asp-action="ManageBookMedia" asp-route-bookId="@book.BookId"
                                               class="btn btn-sm btn-info text-white" title="Quản lý media">
                                                <i class="bi bi-collection-play"></i> Media
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        @if (totalPages > 1)
        {
            <nav aria-label="Phân trang">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="ManageBookAssets"
                           asp-route-page="@(currentPage - 1)"
                           asp-route-searchTerm="@searchTerm">
                            <i class="bi bi-chevron-left"></i> Trước
                        </a>
                    </li>

                    @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" asp-action="ManageBookAssets"
                               asp-route-page="@i" asp-route-searchTerm="@searchTerm">@i</a>
                        </li>
                    }

                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="ManageBookAssets"
                           asp-route-page="@(currentPage + 1)"
                           asp-route-searchTerm="@searchTerm">
                            Sau <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>

            <div class="text-center text-muted mb-4">
                Trang @currentPage / @totalPages (Tổng: @totalBooks sách)
            </div>
        }
    }
    else
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-info-circle display-1"></i>
            <h4 class="mt-3">Không tìm thấy sách nào</h4>
            @if (!string.IsNullOrEmpty(searchTerm))
            {
                <p>Không có kết quả cho: "<strong>@searchTerm</strong>"</p>
                <a asp-action="ManageBookAssets" class="btn btn-primary mt-2">Xem tất cả sách</a>
            }
        </div>
    }
</div>