@model DAMH.Models.Chapter

@{
    ViewData["Title"] = "Thêm chương mới";
    var bookName = ViewBag.BookTitle ?? "Sách chưa xác định";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Thêm Chương Mới</h3>
                    <small>Đang thêm vào sách: <strong>@bookName</strong></small>
                </div>
                <div class="card-body">
                    <form asp-action="AddChapter">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="BookId" />

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">Tên chương</label>
                            <input asp-for="Title" class="form-control" placeholder="Ví dụ: Chương 1" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ChapterOrder" class="form-label fw-bold">Thứ tự</label>
                            <input asp-for="ChapterOrder" class="form-control" type="number" min="1" />
                            <span asp-validation-for="ChapterOrder" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label fw-bold">Nội dung</label>
                            <textarea asp-for="Content" class="form-control" rows="10" placeholder="Nhập nội dung vào đây..."></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input class="form-check-input" type="checkbox" asp-for="IsFree" />
                            <label class="form-check-label" asp-for="IsFree">
                                Chương này miễn phí (Ai cũng xem được)
                            </label>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="ViewBookChapters" asp-route-bookId="@Model.BookId" class="btn btn-secondary me-md-2">Quay lại</a>
                            <button type="submit" class="btn btn-success px-4">Lưu lại</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}