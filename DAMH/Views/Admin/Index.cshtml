@model IEnumerable<DAMH.Models.Book>
@{
    ViewData["Title"] = "Quản lý sách";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary"><i class="bi bi-speedometer2"></i> Quản Lý Sách</h1>
        <a asp-action="CreateBook" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Thêm Sách Mới
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-hover table-striped mb-0 align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Tên sách</th>
                            <th>Mô tả</th>
                            <th>Loại</th>
                            <th class="text-end">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var book in Model)
                        {
                            <tr>
                                <td class="fw-bold text-primary">@book.Title</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(book.Description))
                                    {
                                        @(book.Description.Length > 50 ? book.Description.Substring(0, 50) + "..." : book.Description)
                                    }
                                </td>
                                <td>
                                    @if (book.AccessLevel == DAMH.Models.AccessLevel.Free)
                                    {
                                        <span class="badge bg-success">Miễn phí</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-warning text-dark">VIP</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a asp-action="ViewBookChapters" asp-route-bookId="@book.BookId" class="btn btn-sm btn-info" title="Xem chương">
                                            <i class="bi bi-list-ol"></i> Xem Chương
                                        </a>
                                        <a asp-action="AddChapter" asp-route-bookId="@book.BookId" class="btn btn-sm btn-primary" title="Thêm chương">
                                            <i class="bi bi-plus-lg"></i>
                                        </a>
                                        <a asp-action="EditBook" asp-route-id="@book.BookId" class="btn btn-sm btn-warning" title="Sửa">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <form asp-action="DeleteBook" asp-route-id="@book.BookId" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa sách này không?');">
                                            <button type="submit" class="btn btn-sm btn-danger" title="Xóa">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">Chưa có dữ liệu sách.</div>
    }
</div>