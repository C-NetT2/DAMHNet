@model IEnumerable<DAMH.Models.Book>
@{
    ViewData["Title"] = "Quản lý sách";
    Layout = "_AdminLayout";
    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var totalBooks = ViewBag.TotalBooks ?? 0;
    var searchTerm = ViewBag.SearchTerm ?? "";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary h3">
            <i class="bi bi-book-fill"></i> Quản Lý Sách
            <span class="badge bg-secondary">@totalBooks sách</span>
        </h1>
        <a asp-action="CreateBook" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-circle-fill"></i> Thêm Sách Mới
        </a>
    </div>

    <div class="search-filter-card card mb-4">
        <div class="card-header">
            <i class="bi bi-funnel-fill"></i> Tìm Kiếm Sách
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-8">
                    <label class="form-label">
                        <i class="bi bi-search"></i> Tìm theo tên sách hoặc tác giả
                    </label>
                    <input type="text" name="searchTerm" class="form-control"
                           value="@searchTerm" placeholder="Nhập tên sách hoặc tên tác giả...">
                </div>
                <div class="col-md-4 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-primary flex-fill">
                        <i class="bi bi-search"></i> Tìm kiếm
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary flex-fill">
                        <i class="bi bi-arrow-counterclockwise"></i> Xóa
                    </a>
                </div>
            </form>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0 align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th style="width: 5%">#</th>
                                <th style="width: 25%">Tên Sách</th>
                                <th style="width: 30%">Mô Tả</th>
                                <th style="width: 15%">Phân Loại</th>
                                <th style="width: 25%" class="text-end">Hành Động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int rowNumber = (currentPage - 1) * 30 + 1;
                            }
                            @foreach (var book in Model)
                            {
                                <tr>
                                    <td>@rowNumber</td>
                                    <td>
                                        <div class="fw-bold text-primary text-truncate" style="max-width: 250px;" title="@book.Title">
                                            @book.Title
                                        </div>
                                    </td>
                                    <td>
                                        <div class="text-muted text-truncate" style="max-width: 300px;">
                                            @if (!string.IsNullOrEmpty(book.Description))
                                            {
                                                @book.Description
                                            }
                                            else
                                            {
                                                <em>Không có mô tả</em>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        @if (book.AccessLevel == DAMH.Models.AccessLevel.Free)
                                        {
                                            <span class="badge bg-success rounded-pill">Miễn phí</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark rounded-pill">VIP</span>
                                        }
                                        <small class="d-block text-muted mt-1" style="font-size: 0.75rem">
                                            @book.Genre.GetName()
                                        </small>
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-end gap-1 action-buttons">
                                            <a asp-action="ViewBookChapters" asp-route-bookId="@book.BookId"
                                               class="btn btn-sm btn-info text-white"
                                               title="Quản lý chương">
                                                <i class="bi bi-list-ol"></i> Chương
                                            </a>

                                            <a asp-action="AddChapter" asp-route-bookId="@book.BookId"
                                               class="btn btn-sm btn-success"
                                               title="Thêm chương nhanh">
                                                <i class="bi bi-plus-lg"></i>
                                            </a>

                                            <a asp-action="EditBook" asp-route-id="@book.BookId"
                                               class="btn btn-sm btn-warning text-dark"
                                               title="Chỉnh sửa thông tin">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>

                                            <form asp-action="DeleteBook" asp-route-id="@book.BookId" method="post" class="d-inline" onsubmit="return confirm('CẢNH BÁO: Bạn có chắc chắn muốn xóa sách này và toàn bộ chương của nó không?');">
                                                <button type="submit" class="btn btn-sm btn-danger" title="Xóa sách">
                                                    <i class="bi bi-trash-fill"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                rowNumber++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        @if (totalPages > 1)
        {
            <nav aria-label="Page navigation" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-page="@(currentPage - 1)"
                           asp-route-searchTerm="@searchTerm">
                            <i class="bi bi-chevron-left"></i> Trước
                        </a>
                    </li>

                    @{
                        int startPage = Math.Max(1, currentPage - 2);
                        int endPage = Math.Min(totalPages, currentPage + 2);
                    }

                    @if (startPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index"
                               asp-route-page="1" asp-route-searchTerm="@searchTerm">1</a>
                        </li>
                        @if (startPage > 2)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                    }

                    @for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index"
                               asp-route-page="@i" asp-route-searchTerm="@searchTerm">@i</a>
                        </li>
                    }

                    @if (endPage < totalPages)
                    {
                        @if (endPage < totalPages - 1)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                        <li class="page-item">
                            <a class="page-link" asp-action="Index"
                               asp-route-page="@totalPages" asp-route-searchTerm="@searchTerm">@totalPages</a>
                        </li>
                    }

                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-page="@(currentPage + 1)"
                           asp-route-searchTerm="@searchTerm">
                            Sau <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>

            <div class="pagination-info">
                Trang @currentPage / @totalPages (Tổng @totalBooks sách)
            </div>
        }
    }
    else
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-info-circle display-1"></i>
            <h4 class="mt-3">Không tìm thấy sách nào</h4>
            @if (!string.IsNullOrEmpty(searchTerm))
            {
                <p>Không có kết quả cho từ khóa: "<strong>@searchTerm</strong>"</p>
                <a asp-action="Index" class="btn btn-primary mt-2">Xem tất cả sách</a>
            }
            else
            {
                <p>Hãy bấm nút "Thêm Sách Mới" để bắt đầu.</p>
            }
        </div>
    }
</div>