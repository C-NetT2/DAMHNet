@model DAMH.Models.Book

@{
    ViewData["Title"] = "Danh sách chương";
    Layout = "_AdminLayout";
}

<div class="mb-3">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại danh sách sách
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
        <div>
            <h2 class="mb-0 text-primary">@Model.Title</h2>
            <span class="text-muted">Quản lý các chương</span>
        </div>
        <div>
            <a asp-action="AddChapter" asp-route-bookId="@Model.BookId" class="btn btn-success">
                <i class="bi bi-plus-lg"></i> Thêm chương mới
            </a>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model.Chapters != null && Model.Chapters.Any())
        {
            <table class="table table-striped mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width: 10%">STT</th>
                        <th style="width: 40%">Tên chương</th>
                        <th style="width: 15%">Trạng thái</th>
                        <th style="width: 35%" class="text-end">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var chapter in Model.Chapters.OrderBy(c => c.ChapterOrder))
                    {
                        <tr>
                            <td class="fw-bold">#@chapter.ChapterOrder</td>
                            <td>@chapter.Title</td>
                            <td>
                                @if (chapter.IsFree)
                                {
                                    <span class="badge bg-success">Miễn phí</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Khóa (Theo sách)</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <a asp-controller="Reading"
                                       asp-action="ViewChapter"
                                       asp-route-chapterId="@chapter.ChapterId"
                                       target="_blank"
                                       class="btn btn-sm btn-outline-primary"
                                       title="Xem trước">
                                        <i class="bi bi-eye"></i> Xem
                                    </a>

                                    <a asp-action="EditChapter"
                                       asp-route-id="@chapter.ChapterId"
                                       class="btn btn-sm btn-warning"
                                       title="Chỉnh sửa chương">
                                        <i class="bi bi-pencil-square"></i> Sửa
                                    </a>

                                    <form asp-action="DeleteChapter"
                                          asp-route-id="@chapter.ChapterId"
                                          method="post"
                                          class="d-inline"
                                          onsubmit="return confirm('Bạn có chắc chắn muốn xóa chương này không?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit"
                                                class="btn btn-sm btn-danger"
                                                title="Xóa chương">
                                            <i class="bi bi-trash"></i> Xóa
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center py-5 text-muted">
                <i class="bi bi-journal-x" style="font-size: 2rem;"></i>
                <p class="mt-2">Sách này chưa có chương nào.</p>
                <a asp-action="AddChapter" asp-route-bookId="@Model.BookId" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle"></i> Thêm chương đầu tiên
                </a>
            </div>
        }
    </div>
</div>