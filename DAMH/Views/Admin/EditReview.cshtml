@model DAMH.Models.Review
@{
    ViewData["Title"] = "Sửa đánh giá";
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <h3>Chỉnh sửa Đánh giá (Quyền Admin)</h3>
    <div class="card p-4 shadow-sm" style="max-width: 600px;">
        <form asp-action="EditReview">
            <input type="hidden" asp-for="ReviewId" />
            <div class="mb-3">
                <label class="form-label">Điểm số (1-5)</label>
                <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
            </div>
            <div class="mb-3">
                <label class="form-label">Nội dung bình luận</label>
                <textarea asp-for="Comment" class="form-control" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            <a asp-action="ManageReviews" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>