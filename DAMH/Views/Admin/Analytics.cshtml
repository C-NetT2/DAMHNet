@model DAMH.Models.ViewModels.AdvancedAnalyticsViewModel
@{
    ViewData["Title"] = "Thống kê hệ thống";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">
            <i class="bi bi-graph-up"></i> Bảng thống kê tổng quan
        </h2>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h6 class="text-muted text-uppercase">Người dùng</h6>
                    <h2 class="text-primary">@Model.TotalUsers</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h6 class="text-muted text-uppercase">Sách</h6>
                    <h2 class="text-success">@Model.TotalBooks</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h6 class="text-muted text-uppercase">Lượt yêu thích</h6>
                    <h2 class="text-danger">@Model.TotalFavorites</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h6 class="text-muted text-uppercase">Lượt đọc</h6>
                    <h2 class="text-warning">@Model.TotalReadings</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-0">
                    <h5 class="mb-0 text-primary">
                        <i class="bi bi-bar-chart"></i> Thể loại được yêu thích
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.FavoriteGenreStats?.Any() == true)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var genre in Model.FavoriteGenreStats)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>
                                        <strong>@genre.Genre.GetName()</strong>
                                        <small class="text-muted d-block">@genre.Count lượt</small>
                                    </span>
                                    <span class="badge bg-primary rounded-pill">@genre.Percentage%</span>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            Chưa có dữ liệu yêu thích.
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-0">
                    <h5 class="mb-0 text-danger">
                        <i class="bi bi-heart-fill"></i> Sách được yêu thích nhiều nhất
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.MostFavoritedBooks?.Any() == true)
                    {
                        <table class="table table-sm align-middle">
                            <thead>
                                <tr>
                                    <th>Sách</th>
                                    <th class="text-end">Lượt yêu thích</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var book in Model.MostFavoritedBooks)
                                {
                                    <tr>
                                        <td>@book.Book.Title</td>
                                        <td class="text-end">
                                            <span class="badge bg-danger">@book.FavoriteCount</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            Chưa có dữ liệu.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-white border-0">
            <h5 class="mb-0 text-success">
                <i class="bi bi-journal-bookmark"></i> Sách được đọc nhiều nhất
            </h5>
        </div>
        <div class="card-body">
            @if (Model.MostReadBooks?.Any() == true)
            {
                <div class="table-responsive">
                    <table class="table table-striped align-middle">
                        <thead>
                            <tr>
                                <th>Sách</th>
                                <th class="text-end">Lượt đọc</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var book in Model.MostReadBooks)
                            {
                                <tr>
                                    <td>@book.Book.Title</td>
                                    <td class="text-end">
                                        <span class="badge bg-success">@book.ReadCount</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center text-muted py-4">
                    Chưa có dữ liệu đọc sách.
                </div>
            }
        </div>
    </div>
</div>

