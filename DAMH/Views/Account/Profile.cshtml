@model DAMH.Models.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<div class="profile-header">
    <div class="container text-center">
        <div class="profile-avatar">
            <i class="bi bi-person-fill"></i>
        </div>
        <h2 class="mb-0">@(Model.FullName ?? "Người dùng")</h2>
        <p class="mb-0">@Model.Email</p>
        @if (Model.IsMember)
        {
            <span class="vip-badge">
                <i class="bi bi-crown-fill"></i> Thành viên VIP
            </span>
        }
    </div>
</div>

<div class="container mb-5">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-person-lines-fill"></i> Thông tin cá nhân</h5>
                    <button type="button" id="editBtn" class="btn btn-light btn-sm">
                        <i class="bi bi-pencil-square"></i> Sửa
                    </button>
                </div>
                <div class="card-body p-4">
                    <form asp-action="UpdateProfile" method="post" id="profileForm">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Email (không thể thay đổi)</label>
                                <input type="text" class="form-control-plaintext bg-light px-3 py-2 rounded" value="@Model.Email" readonly>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Trạng thái VIP</label>
                                <input type="text" class="form-control-plaintext bg-light px-3 py-2 rounded" value="@Model.VipStatusText" readonly>
                            </div>
                            @if (Model.IsMember)
                            {
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Hạn sử dụng VIP</label>
                                    <input type="text" class="form-control-plaintext bg-light px-3 py-2 rounded" value="@Model.VipExpiryText" readonly>
                                </div>
                            }
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Ngày đăng ký</label>
                                <input type="text" class="form-control-plaintext bg-light px-3 py-2 rounded" value="@Model.RegistrationDate.ToString("dd/MM/yyyy")" readonly>
                            </div>

                            <div class="col-12"><hr></div>

                            <div class="col-md-6">
                                <label asp-for="FullName" class="form-label fw-bold"></label>
                                <input asp-for="FullName" class="form-control editable-field" disabled placeholder="Nhập họ và tên">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label fw-bold"></label>
                                <input asp-for="PhoneNumber" class="form-control editable-field" disabled placeholder="Nhập số điện thoại">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Address" class="form-label fw-bold"></label>
                                <textarea asp-for="Address" class="form-control editable-field" rows="3" disabled placeholder="Nhập địa chỉ"></textarea>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="col-12 text-end">
                                <button type="submit" id="saveBtn" class="btn btn-success btn-lg px-5" disabled>
                                    <i class="bi bi-check-circle"></i> Lưu thay đổi
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-shield-lock"></i> Bảo mật</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="ChangePassword" method="post">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Mật khẩu hiện tại</label>
                                <input type="password" name="CurrentPassword" class="form-control" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Mật khẩu mới</label>
                                <input type="password" name="NewPassword" class="form-control" required minlength="6">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Xác nhận mật khẩu</label>
                                <input type="password" name="ConfirmPassword" class="form-control" required>
                            </div>
                            <div class="col-12 text-end">
                                <button type="submit" class="btn btn-warning">
                                    <i class="bi bi-key"></i> Đổi mật khẩu
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-lightning-charge"></i> Hành động nhanh</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Home" asp-action="History" class="btn btn-outline-primary">
                            <i class="bi bi-clock-history"></i> Lịch sử đọc
                        </a>
                        <a asp-controller="Favorites" asp-action="Index" class="btn btn-outline-danger">
                            <i class="bi bi-heart-fill"></i> Sách yêu thích
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-success">
                            <i class="bi bi-house-door"></i> Về trang chủ
                        </a>
                        <hr>
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="bi bi-box-arrow-right"></i> Đăng xuất
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            @if (!Model.IsMember)
            {
                <div class="card shadow-sm border-warning">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-crown display-1 text-warning"></i>
                        <h5 class="mt-3">Nâng cấp VIP</h5>
                        <p class="text-muted">Truy cập không giới hạn toàn bộ nội dung</p>
                        <a href="@Url.Action("Index", "VipPayment")" class="btn btn-warning">
                            <i class="bi bi-arrow-up-circle"></i> Nâng cấp ngay
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const editBtn = document.getElementById('editBtn');
            const saveBtn = document.getElementById('saveBtn');
            const editableFields = document.querySelectorAll('.editable-field');
            editBtn.addEventListener('click', function() {
                editableFields.forEach(field => {
                    field.disabled = false;
                    field.classList.add('border-primary');
                });
                saveBtn.disabled = false;
                editBtn.innerHTML = '<i class="bi bi-x-circle"></i> Hủy';
                editBtn.classList.remove('btn-light');
                editBtn.classList.add('btn-secondary');
                editBtn.onclick = function() {
                    location.reload();
                };
            });
        });
    </script>
}