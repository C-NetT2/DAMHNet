@model IEnumerable<DAMH.Models.Favorite>
@{
    ViewData["Title"] = "Sách Yêu Thích";
}

<div class="container mt-4">
    <h2 class="mb-4 text-danger"><i class="bi bi-heart-fill"></i> Tủ Sách Yêu Thích Của Tôi</h2>

    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="@(item.Book.CoverImageUrl ?? "/images/default-cover.jpg")" class="card-img-top" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h6 class="card-title text-truncate"><a asp-controller="Home" asp-action="Details" asp-route-id="@item.BookId" class="text-decoration-none text-dark">@item.Book.Title</a></h6>
                            <small class="text-muted">Đã thêm: @item.DateAdded.ToString("dd/MM/yyyy")</small>
                        </div>
                        <div class="card-footer bg-white border-top-0">
                            <form asp-action="Remove" asp-route-id="@item.FavoriteId" method="post">
                                <button type="submit" class="btn btn-sm btn-outline-danger w-100"><i class="bi bi-x-circle"></i> Bỏ thích</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">Bạn chưa yêu thích cuốn sách nào.</div>
    }
</div>