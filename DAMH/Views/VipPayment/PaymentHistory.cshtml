@model IEnumerable<DAMH.Models.PaymentTransaction>
@{
    ViewData["Title"] = "Lịch sử giao dịch";
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="bi bi-clock-history text-primary"></i> Lịch Sử Giao Dịch VIP
    </h2>

    @if (Model.Any())
    {
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="table-primary">
                            <tr>
                                <th>Mã GD</th>
                                <th>Gói VIP</th>
                                <th>Số tiền</th>
                                <th>Ngày GD</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in Model)
                            {
                                <tr>
                                    <td><strong>#@transaction.TransactionId</strong></td>
                                    <td>
                                        <i class="bi bi-crown-fill text-warning"></i>
                                        @transaction.PackageType.GetName()
                                    </td>
                                    <td>
                                        <strong class="text-success">
                                            @transaction.Amount.ToString("N0")₫
                                        </strong>
                                    </td>
                                    <td>
                                        <small>@transaction.TransactionDate.ToString("dd/MM/yyyy HH:mm")</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> @transaction.Status
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <a asp-controller="Account" asp-action="Profile" class="btn btn-outline-primary">
                <i class="bi bi-person-badge"></i> Quay về Hồ Sơ
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-inbox display-1"></i>
            <h4 class="mt-3">Chưa có giao dịch nào</h4>
            <p>Bạn chưa thực hiện giao dịch VIP nào.</p>
            <a asp-action="Index" class="btn btn-primary mt-2">
                <i class="bi bi-crown"></i> Nâng cấp VIP ngay
            </a>
        </div>
    }
</div>