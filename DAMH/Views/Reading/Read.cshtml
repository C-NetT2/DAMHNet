@model DAMH.Models.Chapter

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Book.Title</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <h1 class="text-center mb-4">@Model.Title</h1>
                    <hr />
                    <div class="chapter-content mt-4" style="font-size: 1.2rem; line-height: 1.8; text-align: justify;">
                        @Html.Raw(Model.Content)
                    </div>
                </div>
                <div class="card-footer text-center py-4">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>