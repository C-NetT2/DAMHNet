@using DAMH.Helpers
@model List<DAMH.Models.Book>

@{
    ViewData["Title"] = "Tất cả sách";
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
        <h2 class="text-primary mb-0">
            <i class="bi bi-collection-fill"></i> Kho Sách (@ViewBag.TotalBooks)
        </h2>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-4">
            @foreach (var book in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 hover-effect book-card">
                        <div class="position-relative">
                            <img src="@(book.CoverImageUrl ?? "/images/default-cover.jpg")"
                                 class="card-img-top bg-secondary"
                                 style="height: 220px; object-fit: cover;"
                                 alt="@book.Title">

                            @if (book.AccessLevel == DAMH.Models.AccessLevel.Premium)
                            {
                                <span class="position-absolute top-0 start-0 badge bg-warning text-dark m-1 shadow-sm">VIP</span>
                            }
                            else
                            {
                                <span class="position-absolute top-0 start-0 badge bg-success m-1 shadow-sm">Free</span>
                            }
                        </div>
                        <div class="card-body p-2">
                            <h6 class="card-title text-truncate mb-1">
                                <a asp-action="Details" asp-route-id="@book.BookId" class="text-decoration-none text-dark stretched-link">@book.Title</a>
                            </h6>
                            <div class="small text-muted">@book.Genre.GetName()</div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (totalPages > 1)
        {
            <div class="d-flex justify-content-center mt-5">
                <nav>
                    <ul class="pagination">
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="AllBooks" asp-route-page="@(currentPage - 1)">Trước</a>
                        </li>

                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" asp-action="AllBooks" asp-route-page="@i">@i</a>
                            </li>
                        }

                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="AllBooks" asp-route-page="@(currentPage + 1)">Sau</a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">Chưa có sách nào trong thư viện.</div>
    }
</div>

<style>
    .book-card:hover {
        transform: translateY(-5px);
        transition: 0.3s;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1) !important;
    }
</style>