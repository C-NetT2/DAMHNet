@using DAMH.Models
@model List<DAMH.Models.Book>

@{
    ViewData["Title"] = "Kết quả tìm kiếm";
    var searchModel = ViewBag.SearchModel as DAMH.Models.ViewModels.SearchViewModel;
}

<div class="container mt-4">
    <div class="d-flex align-items-center mb-4">
        <h2 class="text-primary mb-0 me-3">
            <i class="bi bi-search"></i> Kết quả tìm kiếm
        </h2>
        @if (!string.IsNullOrEmpty(searchModel?.Keyword))
        {
            <span class="text-muted fs-5">cho từ khóa: "<strong>@searchModel.Keyword</strong>"</span>
        }
    </div>

    @if (searchModel != null)
    {
        <div class="card bg-light mb-4 border-0 shadow-sm">
            <div class="card-body py-3">
                <div class="d-flex align-items-center flex-wrap gap-2">
                    <span class="fw-bold text-secondary me-2"><i class="bi bi-funnel-fill"></i> Đang lọc theo:</span>

                    @if (searchModel.BookType.HasValue)
                    {
                        <span class="badge bg-primary p-2">Loại: @Html.DisplayFor(m => searchModel.BookType)</span>
                    }
                    @if (searchModel.Genre.HasValue)
                    {
                        <span class="badge bg-info text-dark p-2">Thể loại: @Html.DisplayFor(m => searchModel.Genre)</span>
                    }
                    @if (searchModel.AgeRating.HasValue)
                    {
                        <span class="badge bg-warning text-dark p-2">Độ tuổi: @Html.DisplayFor(m => searchModel.AgeRating)</span>
                    }

                    @if (!searchModel.BookType.HasValue && !searchModel.Genre.HasValue && !searchModel.AgeRating.HasValue && string.IsNullOrEmpty(searchModel.Keyword))
                    {
                        <span class="text-muted fst-italic">Tất cả sách trong thư viện</span>
                    }

                    <a asp-action="Index" class="btn btn-sm btn-outline-secondary ms-auto">
                        <i class="bi bi-x-circle"></i> Xóa bộ lọc
                    </a>
                </div>
            </div>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <p class="text-muted mb-3">Tìm thấy <strong>@Model.Count</strong> kết quả phù hợp.</p>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var book in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 hover-effect book-card">
                        <div class="position-relative overflow-hidden">
                            <img src="@(book.CoverImageUrl ?? "/images/default-cover.jpg")"
                                 class="card-img-top"
                                 alt="@book.Title"
                                 style="height: 280px; object-fit: cover; transition: transform 0.3s;">

                            <div class="position-absolute top-0 end-0 m-2">
                                @if (book.AccessLevel == AccessLevel.Premium)
                                {
                                    <span class="badge bg-warning text-dark shadow fw-bold">
                                        <i class="bi bi-crown"></i> VIP
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-success shadow fw-bold">
                                        <i class="bi bi-unlock-fill"></i> FREE
                                    </span>
                                }
                            </div>
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title text-truncate fw-bold mb-1">
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@book.BookId" class="text-decoration-none text-dark stretched-link" title="@book.Title">
                                    @book.Title
                                </a>
                            </h6>

                            @if (!string.IsNullOrEmpty(book.Author))
                            {
                                <p class="card-text small text-muted mb-2">
                                    <i class="bi bi-pen"></i> @book.Author
                                </p>
                            }

                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="badge bg-light text-secondary border">@book.BookType</span>

                                    <small class="text-warning fw-bold">
                                        @book.AverageRating <i class="bi bi-star-fill"></i>
                                    </small>
                                </div>

                                <div class="d-flex justify-content-between align-items-center text-muted small border-top pt-2">
                                    <span><i class="bi bi-eye"></i> @book.TotalViews</span>
                                    <span><i class="bi bi-chat-left-text"></i> @book.TotalReviews</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-3 text-secondary opacity-25">
                <i class="bi bi-journal-x" style="font-size: 5rem;"></i>
            </div>
            <h4 class="text-secondary">Rất tiếc, không tìm thấy cuốn sách nào!</h4>
            <p class="text-muted">Hãy thử tìm với từ khóa khác hoặc thay đổi bộ lọc.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-2 px-4 rounded-pill">
                <i class="bi bi-arrow-left"></i> Quay về Trang chủ
            </a>
        </div>
    }
</div>

<style>
    .hover-effect {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .hover-effect:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

    .book-card:hover .card-img-top {
        transform: scale(1.05);
    }
</style>