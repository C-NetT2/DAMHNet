@using DAMH.Models
@model List<DAMH.Models.Book>

@{
    ViewData["Title"] = "Kết quả tìm kiếm";
    var searchModel = ViewBag.SearchModel as DAMH.Models.ViewModels.SearchViewModel;
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">
        <i class="bi bi-search"></i> Kết quả tìm kiếm
        @if (!string.IsNullOrEmpty(searchModel?.Keyword))
        {
            <small class="text-muted">cho từ khóa: "<strong>@searchModel.Keyword</strong>"</small>
        }
    </h2>

    @if (searchModel != null)
    {
        <div class="card bg-light mb-4 border-0 shadow-sm">
            <div class="card-body">
                <h6 class="card-title fw-bold"><i class="bi bi-funnel-fill"></i> Bộ lọc đang áp dụng:</h6>
                <div class="d-flex flex-wrap gap-2">
                    @if (searchModel.BookType.HasValue)
                    {
                        <span class="badge bg-primary p-2">Loại: @searchModel.BookType</span>
                    }
                    @if (searchModel.Genre.HasValue)
                    {
                        <span class="badge bg-info p-2">Thể loại: @searchModel.Genre</span>
                    }
                    @if (searchModel.AgeRating.HasValue)
                    {
                        <span class="badge bg-warning text-dark p-2">Độ tuổi: @searchModel.AgeRating</span>
                    }

                    @if (!searchModel.BookType.HasValue && !searchModel.Genre.HasValue && !searchModel.AgeRating.HasValue && string.IsNullOrEmpty(searchModel.Keyword))
                    {
                        <span class="text-muted fst-italic">Đang hiển thị tất cả sách</span>
                    }
                </div>
            </div>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <p class="text-muted mb-3">Tìm thấy <strong>@Model.Count</strong> kết quả.</p>

        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var book in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 hover-effect">
                        <div class="position-relative">
                            <img src="@(book.CoverImageUrl ?? "/images/default-cover.jpg")"
                                 class="card-img-top"
                                 alt="@book.Title"
                                 style="height: 250px; object-fit: cover;">

                            @if (book.AccessLevel != AccessLevel.Free)
                            {
                                <span class="position-absolute top-0 end-0 badge bg-warning text-dark m-2 shadow-sm">VIP</span>
                            }
                        </div>

                        <div class="card-body">
                            <h6 class="card-title text-truncate fw-bold">
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@book.BookId" class="text-decoration-none text-dark stretched-link">
                                    @book.Title
                                </a>
                            </h6>

                            @if (!string.IsNullOrEmpty(book.Author))
                            {
                                <p class="card-text small text-muted mb-1">
                                    <i class="bi bi-person"></i> @book.Author
                                </p>
                            }

                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <span class="badge bg-light text-dark border">@book.BookType</span>
                                <small class="text-warning fw-bold">
                                    <i class="bi bi-star-fill"></i> @book.AverageRating
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center py-5">
            <i class="bi bi-search display-1 opacity-50"></i>
            <h4 class="mt-3">Không tìm thấy kết quả nào</h4>
            <p class="text-muted">Thử tìm kiếm với từ khóa khác hoặc bỏ bớt bộ lọc.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary mt-2">
                <i class="bi bi-house-fill"></i> Về trang chủ
            </a>
        </div>
    }
</div>

<style>
    .hover-effect {
        transition: transform 0.2s;
    }

        .hover-effect:hover {
            transform: translateY(-5px);
        }
</style>