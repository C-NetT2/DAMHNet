@model DAMH.Models.ViewModels.BookDetailViewModel
@{
    ViewData["Title"] = Model.Book.Title;
}

<div class="container mt-4">
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <img src="@(Model.Book.CoverImageUrl ?? "/images/default-cover.jpg")" class="img-fluid rounded shadow" alt="Bìa sách">
                </div>
                <div class="col-md-9">
                    <h1 class="fw-bold">@Model.Book.Title</h1>
                    <p class="text-muted"><i class="bi bi-person-fill"></i> Tác giả: @(Model.Book.Author ?? "Đang cập nhật")</p>

                    <div class="p-3 bg-light rounded mt-3">
                        <div class="d-flex align-items-center">
                            <h2 class="mb-0 text-warning me-3 fw-bold">
                                <span id="avgRating">@Model.Book.AverageRating</span> <i class="bi bi-star-fill"></i>
                            </h2>
                            <span class="text-muted">(@Model.Book.TotalReviews đánh giá)</span>
                        </div>

                        <hr>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="vote-area" data-book-id="@Model.Book.BookId">
                                <span>Đánh giá của bạn: </span>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    var active = Model.UserRating >= i ? "text-warning" : "text-secondary";
                                    <i class="bi bi-star-fill fs-3 cursor-pointer star-btn @active" data-val="@i" style="cursor: pointer;"></i>
                                }
                                <span id="voteMsg" class="ms-3 text-success fw-bold"></span>
                            </div>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-sm btn-primary">Đăng nhập để đánh giá</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-white fw-bold text-primary"><i class="bi bi-info-circle"></i> THÔNG TIN TRUYỆN</div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4"><strong>Thể loại:</strong> <span class="badge bg-info">@Model.Book.Genre</span></div>
                <div class="col-md-4"><strong>Độ tuổi:</strong> <span class="badge bg-warning text-dark">@Model.Book.AgeRating</span></div>
                <div class="col-md-4"><strong>Loại:</strong> <span class="badge bg-secondary">@Model.Book.BookType</span></div>
            </div>
            @if (!string.IsNullOrEmpty(Model.Book.Introduction))
            {
                <h5 class="mt-3">Giới thiệu:</h5>
                <p style="white-space: pre-line;">@Model.Book.Introduction</p>
            }
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-success text-white fw-bold"><i class="bi bi-list-ol"></i> DANH SÁCH CHƯƠNG</div>
        <div class="list-group list-group-flush">
            @if (Model.Book.Chapters.Any())
            {
                foreach (var chap in Model.Book.Chapters)
                {
                    <a asp-controller="Reading" asp-action="ViewChapter" asp-route-chapterId="@chap.ChapterId" class="list-group-item list-group-item-action d-flex justify-content-between">
                        <span><strong>Chương @chap.ChapterOrder:</strong> @chap.Title</span>
                        @if (!chap.IsFree)
                        {
                            <span class="badge bg-warning text-dark">VIP</span>
                        }
                        else
                        {

                            <span class="badge bg-success">Free</span>
                        }
                    </a>
                }
            }
            else
            {
                <div class="p-3 text-center text-muted">Chưa có chương nào.</div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.star-btn').hover(
                function() { // Mouse over
                    var val = $(this).data('val');
                    $('.star-btn').each(function(index) {
                        if (index < val) $(this).addClass('text-warning').removeClass('text-secondary');
                        else $(this).removeClass('text-warning').addClass('text-secondary');
                    });
                },
                function() { // Mouse out -> Reset về trạng thái đã vote
                    // Logic này có thể làm phức tạp hơn, tạm thời để đơn giản
                }
            );

            $('.star-btn').click(function() {
                var val = $(this).data('val');
                var bookId = $('.vote-area').data('book-id');

                $.ajax({
                    url: '/Review/Submit',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ bookId: bookId, rating: val }),
                    success: function(res) {
                        if(res.success) {
                            $('#avgRating').text(res.averageRating);
                            $('#voteMsg').text("Đã đánh giá " + val + " sao!");
                            // Fix cứng màu sao sau khi vote
                            $('.star-btn').each(function(index) {
                                if (index < val) $(this).addClass('text-warning').removeClass('text-secondary');
                                else $(this).removeClass('text-warning').addClass('text-secondary');
                            });
                        } else {
                            alert(res.message);
                        }
                    }
                });
            });
        });
    </script>
}