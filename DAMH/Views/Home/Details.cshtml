@using DAMH.Models
@using DAMH.Helpers
@model DAMH.Models.ViewModels.BookDetailViewModel

@{
    ViewData["Title"] = Model.Book.Title;
}

<div class="container mt-4">
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-3 mb-3 mb-md-0 text-center">
                    <div class="position-relative d-inline-block">
                        <img src="@(Model.Book.CoverImageUrl ?? "https://placehold.co/400x600?text=No+Image")"
                             class="img-fluid rounded shadow bg-secondary"
                             alt="Bìa sách"
                             style="max-height: 350px; min-height: 350px; object-fit: cover;"
                             onerror="this.onerror=null; this.src='https://placehold.co/400x600/e9ecef/6c757d?text=Anh+Loi';">

                        @if (Model.Book.AccessLevel == AccessLevel.Premium)
                        {
                            <span class="position-absolute top-0 start-0 badge bg-warning text-dark m-2 shadow"><i class="bi bi-crown"></i> VIP</span>
                        }
                    </div>
                </div>

                <div class="col-md-9">
                    <h1 class="fw-bold text-primary">@Model.Book.Title</h1>
                    <p class="text-muted fs-5"><i class="bi bi-person-fill"></i> Tác giả: <strong>@(Model.Book.Author ?? "Đang cập nhật")</strong></p>

                    <div class="d-flex flex-wrap gap-3 mb-3">
                        <span class="badge bg-light text-dark border p-2">
                            <i class="bi bi-journal-album"></i> Loại: @Model.Book.BookType.GetName()
                        </span>
                        <span class="badge bg-info text-white p-2">
                            <i class="bi bi-tags"></i> Thể loại: @Model.Book.Genre.GetName()
                        </span>
                        <span class="badge bg-warning text-dark p-2">
                            <i class="bi bi-exclamation-circle"></i> Độ tuổi: @Model.Book.AgeRating.GetName()
                        </span>
                        <span class="badge bg-light text-muted border p-2">
                            <i class="bi bi-eye"></i> @Model.Book.TotalViews Lượt xem
                        </span>
                    </div>

                    <div class="p-3 bg-light rounded mt-3 border">
                        <div class="d-flex align-items-center mb-2">
                            <h2 class="mb-0 text-warning me-3 fw-bold">
                                @Model.Book.AverageRating <i class="bi bi-star-fill"></i>
                            </h2>
                            <span class="text-muted">(@Model.Book.TotalReviews đánh giá)</span>
                        </div>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="vote-area" data-book-id="@Model.Book.BookId">
                                <span class="me-2">Đánh giá của bạn:</span>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    var active = Model.UserRating >= i ? "text-warning" : "text-secondary";
                                    <i class="bi bi-star-fill fs-4 cursor-pointer star-btn @active" data-val="@i" style="cursor: pointer;"></i>
                                }
                                <span id="voteMsg" class="ms-3 text-success fw-bold"></span>
                            </div>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-box-arrow-in-right"></i> Đăng nhập để đánh giá
                            </a>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Book.Introduction))
                    {
                        <div class="mt-4">
                            <h5 class="fw-bold border-bottom pb-2">Giới thiệu nội dung</h5>
                            <p class="text-secondary" style="white-space: pre-line; line-height: 1.6;">@Model.Book.Introduction</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-5">
        <div class="card-header bg-primary text-white fw-bold d-flex justify-content-between align-items-center">
            <span><i class="bi bi-list-ol"></i> DANH SÁCH CHƯƠNG (@Model.Book.Chapters.Count)</span>
            <span class="badge bg-light text-primary">Cập nhật: @Model.Book.LastUpdated.ToString("dd/MM/yyyy")</span>
        </div>
        <div class="list-group list-group-flush">
            @if (Model.Book.Chapters.Any())
            {
                foreach (var chap in Model.Book.Chapters)
                {
                    <a asp-controller="Reading" asp-action="ViewChapter" asp-route-chapterId="@chap.ChapterId"
                       class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3">
                        <span class="fw-bold">
                            <i class="bi bi-file-text me-2 text-muted"></i> Chương @chap.ChapterOrder: @chap.Title
                        </span>

                        @if (chap.IsFree)
                        {
                            <span class="badge bg-success rounded-pill">Miễn phí</span>
                        }
                        else
                        {
                            @if (Model.Book.AccessLevel == AccessLevel.Free)
                            {
                                <span class="badge bg-success rounded-pill">Miễn phí</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark rounded-pill"><i class="bi bi-lock-fill"></i> VIP</span>
                            }
                        }
                    </a>
                }
            }
            else
            {
                <div class="p-5 text-center text-muted">
                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                    Chưa có chương nào được cập nhật.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.star-btn').click(function() {
                var val = $(this).data('val');
                var bookId = $('.vote-area').data('book-id');

                $.ajax({
                    url: '/Review/Submit',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ bookId: bookId, rating: val }),
                    success: function(res) {
                        if(res.success) {
                            $('#voteMsg').text("Đã lưu " + val + " sao!");
                            $('.star-btn').each(function(index) {
                                if (index < val) $(this).addClass('text-warning').removeClass('text-secondary');
                                else $(this).removeClass('text-warning').addClass('text-secondary');
                            });
                            setTimeout(function(){ location.reload(); }, 1000);
                        } else {
                            alert(res.message);
                        }
                    }
                });
            });
        });
    </script>
}