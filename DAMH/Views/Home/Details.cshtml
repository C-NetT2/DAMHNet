@using DAMH.Models
@using DAMH.Helpers
@model DAMH.Models.ViewModels.BookDetailViewModel

@{
    ViewData["Title"] = Model.Book.Title;
}

<div class="container mt-4 book-detail-page" data-book-id="@Model.Book.BookId">
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-3 mb-3 mb-md-0 text-center">
                    <div class="position-relative d-inline-block">
                        <img src="@(Model.Book.CoverImageUrl ?? "https://placehold.co/400x600?text=No+Image")"
                             class="img-fluid rounded shadow bg-secondary book-cover"
                             alt="Bìa sách"
                             style="max-height: 350px; min-height: 350px; object-fit: cover;"
                             onerror="this.onerror=null; this.src='https://placehold.co/400x600/e9ecef/6c757d?text=Anh+Loi';">
                        @if (Model.Book.AccessLevel == AccessLevel.Premium)
                        {
                            <span class="position-absolute top-0 start-0 badge bg-warning text-dark m-2 shadow"><i class="bi bi-crown"></i> VIP</span>
                        }
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <button type="button"
                                    class="btn btn-light position-absolute top-0 end-0 m-2 shadow favorite-btn"
                                    data-book-id="@Model.Book.BookId"
                                    onclick="toggleFavorite(@Model.Book.BookId, this)"
                                    title="Thêm vào yêu thích">
                                <i class="bi bi-heart fs-4"></i>
                            </button>
                        }
                    </div>
                </div>

                <div class="col-md-9">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="flex-grow-1">
                            <h1 class="fw-bold text-primary mb-2">@Model.Book.Title</h1>
                            <p class="text-muted fs-5 mb-0">
                                <i class="bi bi-person-fill"></i> Tác giả:
                                <strong>@(Model.Book.Author ?? "Đang cập nhật")</strong>
                            </p>
                        </div>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <button type="button"
                                    class="btn btn-outline-danger btn-lg favorite-btn d-none d-md-block"
                                    data-book-id="@Model.Book.BookId"
                                    onclick="toggleFavorite(@Model.Book.BookId, this)">
                                <i class="bi bi-heart fs-5"></i>
                                <span class="ms-2">Yêu thích</span>
                            </button>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary btn-lg d-none d-md-block">
                                <i class="bi bi-heart"></i> Đăng nhập để yêu thích
                            </a>
                        }
                    </div>

                    <div class="d-flex flex-wrap gap-3 mb-3">
                        <span class="badge bg-light text-dark border p-2">
                            <i class="bi bi-journal-album"></i> Loại: @Model.Book.BookType.GetName()
                        </span>
                        <span class="badge bg-info text-white p-2">
                            <i class="bi bi-tags"></i> Thể loại: @Model.Book.Genre.GetName()
                        </span>
                        <span class="badge bg-warning text-dark p-2">
                            <i class="bi bi-exclamation-circle"></i> Độ tuổi: @Model.Book.AgeRating.GetName()
                        </span>
                        <span class="badge bg-light text-muted border p-2">
                            <i class="bi bi-eye"></i> @Model.Book.TotalViews Lượt xem
                        </span>
                    </div>

                    <div class="p-3 bg-light rounded mt-3 border">
                        <div class="d-flex align-items-center mb-2">
                            <h2 class="mb-0 text-warning me-3 fw-bold">
                                @Model.Book.AverageRating <i class="bi bi-star-fill"></i>
                            </h2>
                            <span class="text-muted">(@Model.Book.TotalReviews đánh giá)</span>
                        </div>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <div class="vote-area" data-book-id="@Model.Book.BookId">
                                <span class="me-2">Đánh giá của bạn:</span>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    var active = Model.UserRating >= i ? "text-warning" : "text-secondary";
                                    <i class="bi bi-star-fill fs-4 cursor-pointer star-btn @active" data-val="@i" style="cursor: pointer;"></i>
                                }
                                <span id="voteMsg" class="ms-3 text-success fw-bold"></span>
                            </div>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-box-arrow-in-right"></i> Đăng nhập để đánh giá
                            </a>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Book.Introduction))
                    {
                        <div class="mt-4">
                            <h5 class="fw-bold border-bottom pb-2">Giới thiệu nội dung</h5>
                            <p class="text-secondary" style="white-space: pre-line; line-height: 1.6;">@Model.Book.Introduction</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-5">
        <div class="card-header bg-primary text-white fw-bold d-flex justify-content-between align-items-center">
            <span><i class="bi bi-list-ol"></i> DANH SÁCH CHƯƠNG (@Model.Book.Chapters.Count)</span>
            <span class="badge bg-light text-primary">Cập nhật: @Model.Book.LastUpdated.ToString("dd/MM/yyyy")</span>
        </div>
        <div class="list-group list-group-flush">
            @if (Model.Book.Chapters.Any())
            {
                foreach (var chap in Model.Book.Chapters)
                {
                    <a asp-controller="Reading" asp-action="ViewChapter" asp-route-chapterId="@chap.ChapterId"
                       class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3">
                        <span class="fw-bold">
                            <i class="bi bi-file-text me-2 text-muted"></i> Chương @chap.ChapterOrder: @chap.Title
                        </span>

                        @if (chap.IsFree)
                        {
                            <span class="badge bg-success rounded-pill">Miễn phí</span>
                        }
                        else
                        {
                            @if (Model.Book.AccessLevel == AccessLevel.Free)
                            {
                                <span class="badge bg-success rounded-pill">Miễn phí</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark rounded-pill"><i class="bi bi-lock-fill"></i> VIP</span>
                            }
                        }
                    </a>
                }
            }
            else
            {
                <div class="p-5 text-center text-muted">
                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                    Chưa có chương nào được cập nhật.
                </div>
            }
        </div>
    </div>

    <!-- Comment Section -->
    <div class="card shadow-sm border-0 mb-5">
        <div class="card-header bg-info text-white fw-bold">
            <i class="bi bi-chat-left-dots"></i> Bình luận về sách
        </div>
        <div class="card-body">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <form id="commentForm" class="mb-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Chia sẻ ý kiến của bạn</label>
                        <textarea class="form-control" id="commentText" rows="3" 
                                  placeholder="Nhập bình luận của bạn..." required></textarea>
                        <small class="text-muted">Tối đa 500 ký tự</small>
                    </div>
                    <button type="button" class="btn btn-info text-white" onclick="submitComment(@Model.Book.BookId)">
                        <i class="bi bi-send"></i> Gửi bình luận
                    </button>
                </form>
            }
            else
            {
                <div class="alert alert-warning mb-4">
                    <i class="bi bi-info-circle"></i>
                    <a asp-controller="Account" asp-action="Login" class="alert-link">Đăng nhập</a> để bình luận về sách này.
                </div>
            }

            <!-- Comments List -->
            <div id="commentsList" class="comments-list">
                <div class="text-center text-muted py-4">
                    <i class="bi bi-chat-left-dots fs-1 d-block mb-2"></i>
                    <p>Chưa có bình luận nào. Hãy là người đầu tiên bình luận!</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function submitComment(bookId) {
            var comment = $('#commentText').val().trim();
            
            if (!comment) {
                alert('Vui lòng nhập bình luận');
                return;
            }

            if (comment.length > 500) {
                alert('Bình luận không được vượt quá 500 ký tự');
                return;
            }

            $.ajax({
                url: '/Review/SubmitComment',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ 
                    bookId: bookId, 
                    comment: comment 
                }),
                success: function(res) {
                    if (res.success) {
                        $('#commentText').val('');
                        loadComments(bookId);
                        alert('Bình luận đã được gửi!');
                    } else {
                        alert('Lỗi: ' + res.message);
                    }
                },
                error: function() {
                    alert('Có lỗi xảy ra khi gửi bình luận');
                }
            });
        }

        function loadComments(bookId) {
            $.ajax({
                url: '/Review/GetComments?bookId=' + bookId,
                type: 'GET',
                success: function(data) {
                    if (data && data.length > 0) {
                        var html = '';
                        $.each(data, function(idx, comment) {
                            var createdDate = new Date(comment.createdDate);
                            var dateStr = createdDate.toLocaleDateString('vi-VN') + ' ' + createdDate.toLocaleTimeString('vi-VN');
                            
                            html += '<div class="border-bottom pb-3 mb-3">';
                            html += '<div class="d-flex justify-content-between align-items-start">';
                            html += '<div>';
                            html += '<strong class="text-primary">' + comment.userName + '</strong>';
                            html += '<br><small class="text-muted">' + dateStr + '</small>';
                            html += '</div>';
                            html += '</div>';
                            html += '<p class="mt-2 mb-0">' + comment.content + '</p>';
                            html += '</div>';
                        });
                        $('#commentsList').html(html);
                    }
                }
            });
        }

        $(document).ready(function() {
            var bookId = $('.book-detail-page').data('book-id');
            loadComments(bookId);

            $('.star-btn').click(function() {
                var val = $(this).data('val');
                var bookId = $('.vote-area').data('book-id');

                $.ajax({
                    url: '/Review/Submit',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ bookId: bookId, rating: val }),
                    success: function(res) {
                        if(res.success) {
                            $('#voteMsg').text("Đã lưu " + val + " sao!");
                            $('.star-btn').each(function(index) {
                                if (index < val) $(this).addClass('text-warning').removeClass('text-secondary');
                                else $(this).removeClass('text-warning').addClass('text-secondary');
                            });
                            setTimeout(function(){ location.reload(); }, 1000);
                        } else {
                            alert(res.message);
                        }
                    }
                });
            });
        });
    </script>
}