@model IEnumerable<DAMH.Models.ReadingHistory>

@{
    ViewData["Title"] = "Lịch sử xem";
}

<div class="container mt-4">
    <div class="d-flex align-items-center mb-4">
        <h2 class="text-primary me-3"><i class="bi bi-clock-history"></i> Lịch Sử Đọc Sách</h2>
        @if (Model.Any())
        {
            <span class="badge bg-secondary">@Model.Count() cuốn đang đọc</span>
        }
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var history in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="row g-0 h-100">
                            <div class="col-4">
                                <img src="@(history.Book.CoverImageUrl ?? "/images/default-cover.jpg")"
                                     class="img-fluid rounded-start h-100"
                                     style="object-fit: cover;"
                                     alt="@history.Book.Title">
                            </div>

                            <div class="col-8">
                                <div class="card-body d-flex flex-column h-100 p-3">
                                    <h6 class="card-title fw-bold text-truncate mb-1">
                                        <a asp-action="Details" asp-route-id="@history.BookId" class="text-decoration-none text-dark">
                                            @history.Book.Title
                                        </a>
                                    </h6>

                                    <div class="small text-muted mb-2">
                                        <i class="bi bi-bookmark-fill text-warning"></i> Đã đọc đến:<br>
                                        <strong>@history.Chapter.Title</strong>
                                    </div>

                                    <div class="mt-auto">
                                        <p class="card-text mb-2">
                                            <small class="text-muted">
                                                <i class="bi bi-clock"></i> @history.AccessTime.ToString("HH:mm dd/MM/yyyy")
                                            </small>
                                        </p>

                                        <a asp-controller="Reading"
                                           asp-action="ViewChapter"
                                           asp-route-chapterId="@history.ChapterId"
                                           class="btn btn-sm btn-primary w-100">
                                            <i class="bi bi-book-half"></i> Tiếp tục đọc
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-emoji-frown display-1 text-muted opacity-50"></i>
            <h4 class="mt-3 text-muted">Bạn chưa đọc cuốn sách nào.</h4>
            <p class="text-muted">Hãy bắt đầu khám phá kho sách ngay thôi!</p>
            <a asp-action="Index" class="btn btn-success mt-2">
                <i class="bi bi-search"></i> Khám phá sách
            </a>
        </div>
    }
</div>